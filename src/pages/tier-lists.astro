---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Tier Lists | Nightshift Tower Defense User Guide">
  <div class="tiers-wrap">
    <header class="tiers-hero">
      <h1 class="tiers-title">Tier Lists</h1>
      <p class="tiers-sub">
        These are the best units in each category. Keep in mind that theyâ€™re all just my opinion, you should not take it as fact.
      </p>
    </header>

    <section class="tiers-grid">
      <!-- Starters -->
      <a class="tier-card" href="#starters" aria-label="Go to Starters tier list">
        <div class="tier-card-title">Starters</div>
        <div class="tier-slots">
          <div class="tier-slot">
            <img src="/images/tierlists/starters/slot-1.png" alt="Starter unit 1" />
          </div>
          <div class="tier-slot">
            <img src="/images/tierlists/starters/slot-2.png" alt="Starter unit 2" />
          </div>
        </div>
      </a>

      <!-- Midgame -->
      <a class="tier-card" href="#midgame" aria-label="Go to Midgame tier list">
        <div class="tier-card-title">Midgame</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Endgame -->
      <a class="tier-card" href="#endgame" aria-label="Go to Endgame tier list">
        <div class="tier-card-title">Endgame</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Slowers -->
      <a class="tier-card" href="#slowers" aria-label="Go to Slowers tier list">
        <div class="tier-card-title">Slowers</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Stunners -->
      <a class="tier-card" href="#stunners" aria-label="Go to Stunners tier list">
        <div class="tier-card-title">Stunners</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Bleed -->
      <a class="tier-card" href="#bleed" aria-label="Go to Bleed tier list">
        <div class="tier-card-title">Bleed</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Burn -->
      <a class="tier-card" href="#burn" aria-label="Go to Burn tier list">
        <div class="tier-card-title">Burn</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Boosters -->
      <a class="tier-card" href="#boosters" aria-label="Go to Boosters tier list">
        <div class="tier-card-title">Boosters</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>
    </section>

    <!-- Optional: the anchors these jump to (kept simple for now) -->
    <div class="anchors">
      <div id="starters" class="anchor-spacer"></div>
      <div id="midgame" class="anchor-spacer"></div>
      <div id="endgame" class="anchor-spacer"></div>
      <div id="slowers" class="anchor-spacer"></div>
      <div id="stunners" class="anchor-spacer"></div>
      <div id="bleed" class="anchor-spacer"></div>
      <div id="burn" class="anchor-spacer"></div>
      <div id="boosters" class="anchor-spacer"></div>
    </div>
  </div>

  <style>
    .tiers-wrap{
      max-width: 1100px;
      margin: 0 auto;
      padding: 22px 0 80px;
      text-align: center; /* centers your hero text like you asked */
    }

    .tiers-hero{
      margin-top: 4px;
    }

    .tiers-title{
      margin: 0;
      font-size: clamp(40px, 5vw, 64px);
      line-height: 1.02;
      letter-spacing: -0.02em;
    }

    .tiers-sub{
      margin: 14px auto 0;
      max-width: 80ch;
      color: var(--muted);
      line-height: 1.7;
      font-size: 16px;
    }

    .tiers-grid{
      margin-top: 22px;
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 18px;
      justify-items: center;
    }

    /* The big clickable box */
    .tier-card{
      width: 100%;
      text-decoration: none;
      border: 1px solid rgba(255,255,255,.14);
      border-radius: 22px;
      padding: 18px 16px 16px;
      background:
        radial-gradient(900px 650px at 20% 10%, rgba(106,168,255,.08), transparent 60%),
        radial-gradient(900px 650px at 80% 20%, rgba(159,91,255,.07), transparent 55%),
        rgba(0,0,0,.22);
      box-shadow: var(--shadow);
      transition: transform .14s ease, border-color .14s ease, background .14s ease;
    }

    .tier-card:hover{
      transform: translateY(-2px);
      border-color: rgba(106,168,255,.55);
      background:
        radial-gradient(900px 650px at 20% 10%, rgba(106,168,255,.12), transparent 60%),
        radial-gradient(900px 650px at 80% 20%, rgba(159,91,255,.10), transparent 55%),
        rgba(0,0,0,.26);
    }

    .tier-card-title{
      font-weight: 900;
      font-size: 22px;
      letter-spacing: -0.01em;
      margin-bottom: 14px;
      text-align: center;
    }

    /* Two small rounded slots inside */
    .tier-slots{
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 14px;
      justify-items: center;
    }

    .tier-slot{
      width: 100%;
      aspect-ratio: 1 / 1;
      border-radius: 18px;
      border: 1px solid rgba(255,255,255,.18);
      background: rgba(0,0,0,.28);
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .tier-slot img{
      width: 100%;
      height: 100%;
      object-fit: contain;
      display: block;
      padding: 10px;
      filter: drop-shadow(0 10px 20px rgba(0,0,0,.35));
    }

    .tier-slot-empty{
      color: rgba(232,238,252,.65);
      font-weight: 900;
      font-size: 40px;
      letter-spacing: .02em;
    }

    /* Anchor helpers so jumps feel nice */
    .anchors{
      margin-top: 40px;
    }

    .anchor-spacer{
      scroll-margin-top: 96px;
      height: 1px;
    }

    @media (max-width: 1000px){
      .tiers-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
    }

    @media (max-width: 640px){
      .tiers-grid{ grid-template-columns: 1fr; }
    }
  </style>
</BaseLayout>
