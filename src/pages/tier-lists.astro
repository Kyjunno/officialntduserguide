---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Tier Lists | Nightshift Tower Defense User Guide">
  <div class="tiers-page">
    <header class="tiers-hero">
      <h1 class="tiers-title">Tier Lists</h1>
      <p class="tiers-sub">
        These are the best units in each category. Keep in mind that they’re all just my opinion, you should not take it as fact.
      </p>
    </header>

    <section class="tiers-grid" aria-label="Tier list categories">
      <!-- Starters -->
      <a class="tier-card" href="#" aria-label="Starters tier list (coming soon)">
        <div class="tier-name">STARTERS</div>
        <div class="tier-slots">
          <div class="tier-slot">
            <img src="/images/tierlists/starters/slot-1.png" alt="Starter unit 1" />
          </div>
          <div class="tier-slot">
            <img src="/images/tierlists/starters/slot-2.png" alt="Starter unit 2" />
          </div>
        </div>
      </a>

      <!-- Midgame -->
      <a class="tier-card" href="#" aria-label="Midgame tier list (coming soon)">
        <div class="tier-name">MIDGAMES</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Endgame -->
      <a class="tier-card" href="#" aria-label="Endgame tier list (coming soon)">
        <div class="tier-name">ENDGAMES</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Slowers -->
      <a class="tier-card" href="#" aria-label="Slowers tier list (coming soon)">
        <div class="tier-name">SLOWERS</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Stunners -->
      <a class="tier-card" href="#" aria-label="Stunners tier list (coming soon)">
        <div class="tier-name">STUNNERS</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Bleed -->
      <a class="tier-card" href="#" aria-label="Bleed tier list (coming soon)">
        <div class="tier-name">BLEED</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Burn -->
      <a class="tier-card" href="#" aria-label="Burn tier list (coming soon)">
        <div class="tier-name">BURN</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>

      <!-- Boosters -->
      <a class="tier-card" href="#" aria-label="Boosters tier list (coming soon)">
        <div class="tier-name">BOOSTERS</div>
        <div class="tier-slots">
          <div class="tier-slot tier-slot-empty">?</div>
          <div class="tier-slot tier-slot-empty">?</div>
        </div>
      </a>
    </section>
  </div>

  <style>
    .tiers-page{
      max-width: 1100px;
      margin: 0 auto;
      padding: 22px 0 80px;
      text-align: center;
    }

    .tiers-title{
      margin: 0;
      font-size: clamp(42px, 5vw, 66px);
      line-height: 1.02;
      letter-spacing: -0.02em;
    }

    .tiers-sub{
      margin: 14px auto 0;
      max-width: 82ch;
      color: var(--muted);
      line-height: 1.7;
      font-size: 16px;
    }

    .tiers-grid{
      margin-top: 24px;
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 22px;
    }

    /* Big FN-style card */
    .tier-card{
      text-decoration: none;
      display: block;
      border-radius: 22px;
      padding: 18px 18px 20px;

      /* No “extra boxes” look. Just one clean card. */
      border: 1px solid rgba(255,255,255,.18);
      background:
        radial-gradient(900px 650px at 10% 10%, rgba(106,168,255,.10), transparent 60%),
        radial-gradient(900px 650px at 80% 20%, rgba(159,91,255,.10), transparent 55%),
        rgba(0,0,0,.22);

      box-shadow: var(--shadow);
      transition: transform .14s ease, border-color .14s ease, background .14s ease;
    }

    .tier-card:hover{
      transform: translateY(-2px);
      border-color: rgba(232,238,252,.55);
      background:
        radial-gradient(900px 650px at 10% 10%, rgba(106,168,255,.14), transparent 60%),
        radial-gradient(900px 650px at 80% 20%, rgba(159,91,255,.14), transparent 55%),
        rgba(0,0,0,.26);
    }

    .tier-name{
      font-weight: 1000;
      letter-spacing: 0.08em;
      font-size: 22px;
      margin: 6px 0 18px;
      text-align: center;
    }

    /* Two small inner slots */
    .tier-slots{
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 14px;
      justify-items: center;
    }

    .tier-slot{
      width: 100%;
      aspect-ratio: 1 / 1;
      border-radius: 18px;
      border: 2px solid rgba(232,238,252,.70);
      background: rgba(0,0,0,.25);
      overflow: hidden;

      display: flex;
      align-items: center;
      justify-content: center;
    }

    .tier-slot img{
      width: 100%;
      height: 100%;
      object-fit: contain; /* IMPORTANT: prevents the “big stretched image” look */
      padding: 12px;
      display: block;
      filter: drop-shadow(0 10px 22px rgba(0,0,0,.35));
    }

    .tier-slot-empty{
      color: rgba(232,238,252,.75);
      font-weight: 1000;
      font-size: 44px;
    }

    @media (max-width: 1000px){
      .tiers-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
    }

    @media (max-width: 640px){
      .tiers-grid{ grid-template-columns: 1fr; }
    }
  </style>
</BaseLayout>
