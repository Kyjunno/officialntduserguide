---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Nightshift Tower Defense User Guide">
  <section class="home-bleed">
    <!-- Background layers -->
    <div class="home-bg-blur"></div>
    <div class="home-bg-contain"></div>
    <div class="home-overlay"></div>

    <!-- Content -->
    <div class="home-inner">
      <div class="home-card">
        <div class="home-kicker">Official Community Guide</div>

        <h1 class="home-title">
          Nightshift Tower Defense<br />User Guide
        </h1>

        <p class="home-text">
          Hey, Iâ€™m <strong>Clancy</strong>. This user guide is basically here to help you understand
          all the nerdy facts. It keeps unit info, tier lists, and mechanics in one place,
          and stays updated as the game changes.
        </p>

        <div class="home-divider"></div>

        <h2 class="home-subtitle">Community</h2>

        <p class="home-text">
          Want to help improve the guide, report mistakes, or just hang out with the community?
          Join us here:
        </p>

        <a
          class="home-button"
          href="https://discord.gg/YOUR_INVITE"
          target="_blank"
          rel="noopener"
        >
          Join the NTD Discord
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* FULL WIDTH SECTION */
  .home-bleed{
    position: relative;
    width: 100vw;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    min-height: calc(100vh - 110px);
    overflow: hidden;
    border-top: 1px solid var(--border);
  }

  /* BLURRED FILL LAYER (never crops badly) */
  .home-bg-blur{
    position:absolute;
    inset:0;
    background-image: url("/images/home-bg.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: blur(18px) brightness(0.65) saturate(1.05);
    transform: scale(1.1);
  }

  /* FULL IMAGE LAYER (no cropping, always visible) */
  .home-bg-contain{
    position:absolute;
    inset:0;
    background-image: url("/images/home-bg.png");
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    filter: brightness(0.85);
    opacity: 0.95;
  }

  /* READABILITY OVERLAY */
  .home-overlay{
    position:absolute;
    inset:0;
    background:
      radial-gradient(1100px 700px at 20% 20%, rgba(106,168,255,.18), transparent 60%),
      radial-gradient(900px 700px at 80% 30%, rgba(159,91,255,.14), transparent 55%),
      linear-gradient(180deg, rgba(11,14,20,.60), rgba(11,14,20,.92));
  }

  /* CONTENT WRAPPER */
  .home-inner{
    position: relative;
    z-index: 1;
    max-width: 1180px;
    margin: 0 auto;
    padding: 60px 18px 90px;
    display:flex;
    align-items:center;
    justify-content:center;
  }

  /* TEXT CARD */
  .home-card{
    width:100%;
    max-width: 860px;
    border: 1px solid var(--border);
    border-radius: 22px;
    background: rgba(0,0,0,.45);
    box-shadow: var(--shadow);
    padding: 30px 26px;
  }

  .home-kicker{
    display:inline-block;
    padding: 6px 12px;
    border-radius: 999px;
    border: 1px solid var(--border);
    background: rgba(255,255,255,.05);
    color: var(--muted);
    font-size: 12px;
    letter-spacing: .08em;
    text-transform: uppercase;
    margin-bottom: 12px;
  }

  .home-title{
    margin:0;
    font-size: clamp(34px, 4.8vw, 56px);
    line-height:1.05;
    letter-spacing:-0.02em;
  }

  .home-subtitle{
    margin-top:16px;
    font-size:18px;
  }

  .home-text{
    margin-top:14px;
    color: var(--muted);
    line-height:1.7;
    font-size:16px;
  }

  .home-divider{
    height:1px;
    background: var(--border);
    margin:20px 0;
  }

  .home-button{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    margin-top:16px;
    padding:12px 16px;
    border-radius:14px;
    border:1px solid var(--border);
    background: rgba(255,255,255,.05);
    font-weight:800;
    text-decoration:none;
  }

  .home-button:hover{
    border-color: rgba(106,168,255,.7);
    background: rgba(106,168,255,.12);
  }
</style>
