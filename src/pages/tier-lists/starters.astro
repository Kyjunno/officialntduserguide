<BaseLayout title="Starter Tier List | Nightshift Tower Defense User Guide">
  <div class="tierpage-bg" aria-hidden="true"></div>
  <div class="tierpage-bg-overlay" aria-hidden="true"></div>

  <div class="page">
    <header class="hero">
      <h1 class="title">Starter Tier List</h1>
      <p class="subtitle">$800 and below</p>
      <p class="note">Reminder that this is made with my opinion in mind.</p>
    </header>

    <div class="panel">
      <div class="panel-top">
        <div class="panel-title">Top 10 Starter Units</div>
        <div class="panel-sub">Ranked list with quick stats</div>
      </div>

      <div class="list">
        {units.map((u) => (
          <article class="row" aria-label={`${u.name} ranked ${u.rank}`}>
            <div class="unitCard">
              <div class="unitImageWrap">
                <img class="unitImage" src={u.image} alt={u.name} loading="lazy" decoding="async" />
                <div class="overlay overlay-name">{u.name}</div>
                <div class="overlay overlay-rank">#{u.rank}</div>
                <div class="overlay overlay-cost">${u.cost}</div>
              </div>
            </div>

            <div class="unitInfo">
              <div class="infoGrid">
                <div class="infoBox">
                  <div class="label">Max DPS</div>
                  <div class="value">{u.maxDps}</div>
                </div>

                <div class="infoBox">
                  <div class="label">Attack Type</div>
                  <div class="value">{u.attackType}</div>
                </div>

                <div class="infoBox">
                  <div class="label">Placements</div>
                  <div class="value">{u.placements}</div>
                </div>
              </div>

              <div class="stats">
                <div class="stat">
                  <div class="label">Damage</div>
                  <div class="value">{u.stats.damage}</div>
                </div>
                <div class="stat">
                  <div class="label">Cooldown</div>
                  <div class="value">{u.stats.cooldown}</div>
                </div>
                <div class="stat">
                  <div class="label">Range</div>
                  <div class="value">{u.stats.range}</div>
                </div>
                <div class="stat">
                  <div class="label">DPS</div>
                  <div class="value">{u.stats.dps}</div>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>

  <style>
    .tierpage-bg{
      position: fixed;
      inset: 0;
      z-index: -2;
      background-image: url("/images/tierlist-bg.png");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      filter: blur(1px) brightness(0.85) contrast(1.05) saturate(1.2);
      transform: scale(1.02);
    }

    .tierpage-bg-overlay{
      position: fixed;
      inset: 0;
      z-index: -1;
      background:
        radial-gradient(900px 650px at 20% 10%, rgba(106,168,255,.18), transparent 60%),
        radial-gradient(900px 650px at 80% 20%, rgba(159,91,255,.16), transparent 55%),
        linear-gradient(180deg, rgba(10,12,18,.30), rgba(10,12,18,.62));
    }

    .page{
      max-width: 1100px;
      margin: 0 auto;
      padding: 26px 18px 80px;
      text-align: center;
    }

    .hero{
      margin-bottom: 18px;
    }

    .title{
      margin: 0;
      font-size: clamp(42px, 5vw, 66px);
      line-height: 1.02;
      letter-spacing: -0.02em;
    }

    .subtitle{
      margin: 12px 0 0;
      color: rgba(232,238,252,.88);
      font-weight: 800;
      letter-spacing: 0.02em;
    }

    .note{
      margin: 10px auto 0;
      max-width: 70ch;
      color: var(--muted);
      line-height: 1.7;
    }

    .panel{
      margin: 22px auto 0;
      border-radius: 24px;
      border: 1px solid rgba(255,255,255,.20);
      background: rgba(0,0,0,.22);
      box-shadow: var(--shadow);
      text-align: left;
      overflow: hidden;
    }

    .panel-top{
      padding: 18px 18px 10px;
      border-bottom: 1px solid rgba(255,255,255,.10);
      text-align: left;
    }

    .panel-title{
      font-weight: 1000;
      letter-spacing: 0.06em;
      font-size: 16px;
      text-transform: uppercase;
      color: rgba(232,238,252,.95);
    }

    .panel-sub{
      margin-top: 6px;
      color: rgba(232,238,252,.70);
      font-size: 14px;
    }

    .list{
      display: grid;
      gap: 14px;
      padding: 18px;
    }

    .row{
      display: grid;
      grid-template-columns: 260px 1fr;
      gap: 16px;
      align-items: stretch;
      border-radius: 20px;
      border: 1px solid rgba(255,255,255,.16);
      background: rgba(0,0,0,.18);
      overflow: hidden;
    }

    .unitCard{
      padding: 14px;
    }

    .unitImageWrap{
      position: relative;
      border-radius: 18px;
      border: 2px solid rgba(232,238,252,.75);
      overflow: hidden;
      background: rgba(0,0,0,.20);
      aspect-ratio: 1 / 1;
    }

    .unitImage{
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      display: block;
    }

    .overlay{
      position: absolute;
      padding: 8px 10px;
      font-weight: 900;
      color: rgba(255,255,255,.95);
      background: rgba(0,0,0,.55);
      border: 1px solid rgba(255,255,255,.16);
      backdrop-filter: blur(6px);
      border-radius: 12px;
      line-height: 1;
    }

    .overlay-name{
      top: 10px;
      left: 10px;
      font-size: 13px;
      max-width: calc(100% - 92px);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .overlay-rank{
      top: 10px;
      right: 10px;
      font-size: 13px;
    }

    .overlay-cost{
      bottom: 10px;
      left: 10px;
      font-size: 13px;
    }

    .unitInfo{
      padding: 14px 16px 14px 0;
      display: grid;
      align-content: center;
      gap: 12px;
    }

    .infoGrid{
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 10px;
    }

    .infoBox{
      border-radius: 16px;
      border: 1px solid rgba(255,255,255,.14);
      background: rgba(0,0,0,.18);
      padding: 10px 12px;
    }

    .label{
      color: rgba(232,238,252,.72);
      font-size: 12px;
      letter-spacing: 0.03em;
      text-transform: uppercase;
      font-weight: 800;
    }

    .value{
      margin-top: 6px;
      font-size: 15px;
      font-weight: 900;
      color: rgba(232,238,252,.95);
    }

    .stats{
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 10px;
    }

    .stat{
      border-radius: 16px;
      border: 1px solid rgba(255,255,255,.14);
      background: rgba(0,0,0,.16);
      padding: 10px 12px;
    }

    @media (max-width: 980px){
      .row{
        grid-template-columns: 1fr;
      }
      .unitInfo{
        padding: 0 14px 14px;
      }
      .infoGrid{
        grid-template-columns: 1fr;
      }
      .stats{
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }
  </style>
</BaseLayout>
