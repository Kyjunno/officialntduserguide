---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Unit Arcade";
---

<BaseLayout title={pageTitle}>
  <main class="ua-wrap">
    <section class="ua-hero">
      <h1>Unit Arcade</h1>
      <p>Search a unit, then choose level, shiny, and enchant to see the calculated stats.</p>
    </section>

    <section class="ua-card">
      <div class="ua-searchRow">
        <div class="ua-searchLeft">
          <div class="ua-label">Unit search</div>
          <input class="ua-input" type="text" placeholder="Type a unit name..." value="Golden Bonnie" />
          <div class="ua-help">This search redirects to the matching unit.</div>
        </div>

        <div class="ua-imageBox">
          <div class="ua-imageInner">No image</div>
        </div>
      </div>

      <div class="ua-divider"></div>

      <div class="ua-statsGrid4">
        <div class="ua-stat">
          <div class="ua-statLabel">RARITY</div>
          <div class="ua-statValue">Legendary</div>
        </div>

        <div class="ua-stat">
          <div class="ua-statLabel">ATTACK TYPE</div>
          <div class="ua-statValue">Not set</div>
        </div>

        <div class="ua-stat">
          <div class="ua-statLabel">PLACEMENT PRICE</div>
          <div class="ua-statValue">Not set</div>
        </div>

        <div class="ua-stat">
          <div class="ua-statLabel">PLACEMENTS</div>
          <div class="ua-statValue">2</div>
        </div>
      </div>

      <div class="ua-divider"></div>

      <div class="ua-wideBlock">
        <div class="ua-wideTitle">OBTAINABILITY</div>
        <div class="ua-wideText">Not set yet.</div>
      </div>

      <div class="ua-divider"></div>

      <div class="ua-wideBlock">
        <div class="ua-wideTitle ua-twoColTitle">
          <span>ABILITY</span>
          <span class="ua-rightTitle">DESCRIPTION</span>
        </div>
        <div class="ua-wideText">No abilities listed yet.</div>
      </div>

      <div class="ua-divider"></div>

      <section class="ua-calcCard">
        <div class="ua-calcHeader">
          <h2>Calculator</h2>
        </div>

        <div class="ua-calcControls">
          <div class="ua-control">
            <div class="ua-controlLabel">LEVEL</div>
            <input class="ua-inputSmall" type="number" min="1" value="1" />
          </div>

          <div class="ua-control">
            <div class="ua-controlLabel">VARIANT</div>
            <select class="ua-select">
              <option>Normal</option>
              <option>Shiny</option>
            </select>
          </div>

          <div class="ua-control">
            <div class="ua-controlLabel">ENCHANT</div>
            <select class="ua-select">
              <option>None</option>
              <option>Critical Strikes</option>
              <option>Power</option>
              <option>Cooldown</option>
              <option>Range</option>
            </select>
          </div>

          <button class="ua-applyBtn" type="button">Apply</button>
        </div>

        <div class="ua-calcGrid">
          <div class="ua-miniStat">
            <div class="ua-miniLabel">LEVEL</div>
            <div class="ua-miniValue">1</div>
          </div>
          <div class="ua-miniStat">
            <div class="ua-miniLabel">COST</div>
            <div class="ua-miniValue">0</div>
          </div>
          <div class="ua-miniStat">
            <div class="ua-miniLabel">DPS</div>
            <div class="ua-miniValue">0</div>
          </div>
          <div class="ua-miniStat">
            <div class="ua-miniLabel">DAMAGE</div>
            <div class="ua-miniValue">0</div>
          </div>
          <div class="ua-miniStat">
            <div class="ua-miniLabel">COOLDOWN</div>
            <div class="ua-miniValue">0</div>
          </div>
          <div class="ua-miniStat">
            <div class="ua-miniLabel">RANGE</div>
            <div class="ua-miniValue">0</div>
          </div>
          <div class="ua-miniStat">
            <div class="ua-miniLabel">POWER</div>
            <div class="ua-miniValue">0</div>
          </div>
        </div>

        <div class="ua-totalBox">
          <div class="ua-totalTitle">TOTAL DPS</div>
          <div class="ua-totalValue">0</div>
        </div>
      </section>
    </section>
  </main>

  <style>
    /* IMPORTANT: This forces a true full-viewport background behind the entire site shell */
    :global(body) {
      background: transparent !important;
    }

    :global(body::before) {
      content: "";
      position: fixed;
      inset: 0;
      z-index: -2;
      background-image: url("/images/unit-arcade-bg.png");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      transform: translateZ(0);
    }

    :global(body::after) {
      content: "";
      position: fixed;
      inset: 0;
      z-index: -1;
      background: linear-gradient(rgba(5, 10, 20, 0.65), rgba(5, 10, 20, 0.65));
      pointer-events: none;
    }

    /* Page container */
    .ua-wrap {
      max-width: 1200px;
      margin: 0 auto;
      padding: 32px 24px 72px;
    }

    .ua-hero h1 {
      font-size: 2.2rem;
      margin: 0 0 8px;
      letter-spacing: 0.2px;
    }

    .ua-hero p {
      margin: 0 0 18px;
      opacity: 0.85;
    }

    /* Card styling */
    .ua-card {
      border-radius: 18px;
      border: 1px solid rgba(180, 210, 255, 0.18);
      background: rgba(10, 15, 25, 0.55);
      backdrop-filter: blur(10px);
      padding: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.35);
    }

    .ua-divider {
      height: 1px;
      background: rgba(180, 210, 255, 0.14);
      margin: 18px 0;
    }

    .ua-searchRow {
      display: grid;
      grid-template-columns: 1fr 120px;
      gap: 16px;
      align-items: stretch;
    }

    .ua-searchLeft {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .ua-label {
      font-size: 0.85rem;
      font-weight: 700;
      letter-spacing: 0.04em;
      opacity: 0.9;
    }

    .ua-help {
      font-size: 0.8rem;
      opacity: 0.65;
    }

    .ua-input {
      width: 100%;
      border-radius: 14px;
      border: 1px solid rgba(180, 210, 255, 0.18);
      background: rgba(5, 8, 15, 0.55);
      padding: 12px 14px;
      outline: none;
      color: inherit;
    }

    .ua-imageBox {
      border-radius: 16px;
      border: 1px solid rgba(180, 210, 255, 0.18);
      background: rgba(5, 8, 15, 0.35);
      display: grid;
      place-items: center;
      overflow: hidden;
    }

    .ua-imageInner {
      opacity: 0.7;
      font-weight: 600;
    }

    /* Top stats */
    .ua-statsGrid4 {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 12px;
    }

    .ua-stat {
      border-radius: 14px;
      border: 1px solid rgba(180, 210, 255, 0.14);
      background: rgba(5, 8, 15, 0.35);
      padding: 12px 12px;
    }

    .ua-statLabel {
      font-size: 0.72rem;
      font-weight: 800;
      letter-spacing: 0.06em;
      opacity: 0.75;
    }

    .ua-statValue {
      margin-top: 8px;
      font-weight: 700;
    }

    /* Wide blocks */
    .ua-wideBlock {
      border-radius: 14px;
      border: 1px solid rgba(180, 210, 255, 0.14);
      background: rgba(5, 8, 15, 0.35);
      padding: 14px 14px;
    }

    .ua-wideTitle {
      font-size: 0.72rem;
      font-weight: 800;
      letter-spacing: 0.06em;
      opacity: 0.75;
      margin-bottom: 10px;
    }

    .ua-twoColTitle {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }

    .ua-rightTitle {
      text-align: center;
      opacity: 0.75;
    }

    .ua-wideText {
      font-weight: 600;
      opacity: 0.9;
    }

    /* Calculator section */
    .ua-calcCard {
      border-radius: 16px;
      border: 1px solid rgba(180, 210, 255, 0.16);
      background: rgba(5, 8, 15, 0.28);
      padding: 18px;
    }

    .ua-calcHeader h2 {
      margin: 0 0 14px;
      font-size: 1.4rem;
    }

    .ua-calcControls {
      display: grid;
      grid-template-columns: 160px 1fr 1fr 120px;
      gap: 12px;
      align-items: end;
    }

    .ua-controlLabel {
      font-size: 0.72rem;
      font-weight: 800;
      letter-spacing: 0.06em;
      opacity: 0.75;
      margin-bottom: 8px;
    }

    .ua-inputSmall {
      width: 100%;
      border-radius: 12px;
      border: 1px solid rgba(180, 210, 255, 0.18);
      background: rgba(5, 8, 15, 0.55);
      padding: 10px 12px;
      outline: none;
      color: inherit;
    }

    .ua-select {
      width: 100%;
      border-radius: 12px;
      border: 1px solid rgba(180, 210, 255, 0.18);
      background: rgba(5, 8, 15, 0.55);
      padding: 10px 12px;
      outline: none;
      color: inherit;
    }

    .ua-applyBtn {
      border-radius: 14px;
      border: 1px solid rgba(180, 210, 255, 0.2);
      background: rgba(25, 40, 70, 0.35);
      padding: 10px 14px;
      cursor: pointer;
      font-weight: 800;
    }

    .ua-calcGrid {
      margin-top: 16px;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 12px;
    }

    .ua-miniStat {
      border-radius: 14px;
      border: 1px solid rgba(180, 210, 255, 0.14);
      background: rgba(5, 8, 15, 0.35);
      padding: 12px;
      min-height: 70px;
    }

    .ua-miniLabel {
      font-size: 0.72rem;
      font-weight: 800;
      letter-spacing: 0.06em;
      opacity: 0.75;
    }

    .ua-miniValue {
      margin-top: 10px;
      font-weight: 800;
      font-size: 1.05rem;
    }

    .ua-totalBox {
      margin-top: 16px;
      border-radius: 14px;
      border: 1px solid rgba(180, 210, 255, 0.16);
      background: rgba(10, 15, 25, 0.55);
      padding: 14px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .ua-totalTitle {
      font-size: 0.8rem;
      font-weight: 900;
      letter-spacing: 0.06em;
      opacity: 0.85;
    }

    .ua-totalValue {
      font-size: 1.2rem;
      font-weight: 900;
    }

    /* Responsive */
    @media (max-width: 900px) {
      .ua-searchRow {
        grid-template-columns: 1fr;
      }

      .ua-statsGrid4 {
        grid-template-columns: repeat(2, 1fr);
      }

      .ua-calcControls {
        grid-template-columns: 1fr;
      }

      .ua-calcGrid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
